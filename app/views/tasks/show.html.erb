<div class="d-flex justify-content-between mb-3">
  <h2><%= @task.title %></h2>
  <%= link_to "Edit task", edit_path, class:"btn btn-outline-secondary"%>
</div>

<div class="alert alert-dark"><%= @task.details %></div>

<div class="border-bottom pb-3">
  <span>
    <%= @task.completed ? "This task is completed" : "This task is not completed" %>
  </span>
</div>

<div class="mt-3">
  <%= link_to "Back to list",tasks_path  %>
</div>
