<div class="container mt-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1><%= @task.title %></h1>
    <%= link_to edit_path(@task.id), class: 'btn btn-light btn-sm border' do %>
      <i class="fa fa-pencil"></i> Edit this task
    <% end %>
  </div>

  <div class="alert alert-dark"><%= @task.details %></div>

  <div class="mb-3">
    <span>
      <%= @task.completed ? "This task is completed" : "This task is not completed" %>
    </span>
  </div>

  <hr>

  <%= link_to root_path do %>
    <i class="fa-solid fa-arrow-rotate-left"></i> Back to list
  <% end %>
</div>
