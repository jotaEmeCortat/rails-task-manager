<div class="container mt-5">
  <h1 class="">My Tasks</h1>

  <div class="my-3">
    <% @tasks.each do |task| %>
      <%= link_to task_path(task), class: "text-dark link-underline-dark mb-3" do %>
        <div class="d-flex gap-3 form-check pe-auto link-underline-dark">
          <input class="form-check-input" type="checkbox" value="" <% if task.completed %> checked <% end %>>
          <span class="fw-semibold ">
            <%= task.title %>
          </span>

          <%= link_to delete_path(task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do%>
            <i class="fa-solid fa-trash" style="color: #ff0000;"></i>
          <% end %>
        </div>
      <% end %>
    <% end %>
  </div>

  <hr>

  <div class="mt-3">
    <%= link_to tasks_new_path do %>
      <i class="fa-solid fa-plus"></i> Add a new task
    <% end %>
  </div>
</div>
